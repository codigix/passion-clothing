{
  "name": "passion-erp-system",
  "version": "1.0.0",
  "description": "Complete ERP system for Pashion clothing factory management",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cross-env PORT=5000 npm run dev --prefix server",
    "client": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "install-server": "npm install --prefix server",
    "install-client": "npm install --prefix client",
    "install-all": "npm-run-all --serial install-server install-client",
    "start": "npm start --prefix server",
    "test": "npm-run-all --serial test:server test:client",
    "test:server": "npm test --prefix server",
    "test:client": "npm test --prefix client",
    "migrate": "npm run migrate --prefix server",
    "seed": "npm run seed --prefix server",
    "reset-db": "npm run reset-db --prefix server"
  },
  "keywords": [
    "erp",
    "clothing",
    "factory",
    "management",
    "react",
    "nodejs",
    "mysql",
    "inventory",
    "sales",
    "procurement"
  ],
  "author": "Pashion Development Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "sequelize-cli": "^6.6.3",
    "tailwindcss": "^4.1.13"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pashion/erp-system.git"
  },
  "bugs": {
    "url": "https://github.com/pashion/erp-system/issues"
  },
  "homepage": "https://github.com/pashion/erp-system#readme",
  "dependencies": {
    "@mui/icons-material": "^7.3.2",
    "@tailwindcss/postcss": "^4.1.13",
    "bwip-js": "^4.7.0",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.544.0"
  }
}
