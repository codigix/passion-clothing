# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=passion_erp
DB_USER=root
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External API Keys (for integrations)
COURIER_API_KEY=your_courier_api_key
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
SMS_API_KEY=your_sms_api_key

# Barcode/QR Code Configuration
QR_CODE_SIZE=200
BARCODE_FORMAT=CODE128

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=1800000

# Company Information
COMPANY_NAME=Pashion Clothing Factory
COMPANY_ADDRESS=Mumbai, Maharashtra, India
COMPANY_PHONE=+91-9876543210
COMPANY_EMAIL=info@pashion.com