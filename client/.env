# API Configuration - Dynamic port support
# For development with proxy (recommended):
# VITE_API_URL=/api  # Commented out to enable proxy

# For direct backend connection (uncomment and set port when needed):
# VITE_API_URL=http://localhost:5000/api

# Alternative ports for different environments:
# VITE_API_URL=http://localhost:5001/api  # Backend on different port
# VITE_API_URL=http://localhost:8000/api  # Python backend
# VITE_API_URL=https://api.example.com    # Production API

# REACT_APP_API_URL=/api

# Backend URL for Vite proxy (when not using /api proxy)
# VITE_BACKEND_URL=http://localhost:5000

# App Configuration

# Use Vite proxy in development (recommended)
# VITE_API_BASE_URL=http://localhost:5000/api
# When commented, it will use /api proxy configured in vite.config.js
REACT_APP_NAME=Pashion ERP System
REACT_APP_VERSION=1.0.0

# Company Information
REACT_APP_COMPANY_NAME=Pashion Clothing Factory
REACT_APP_COMPANY_LOGO=/logo.png

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_BARCODE_SCANNER=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=info

# Build Configuration
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_DATE=2024-12-01